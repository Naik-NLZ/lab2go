#!/bin/sh

if [ ! -d isolinux ]; then
    cd binary
fi

cat >>isolinux/live.cfg <<END

label live-encrypted-persistence
    menu label ^Lab2Go (live -encrypted persistence)
    linux /live/vmlinuz
    initrd /live/initrd.img
    append boot=live persistent=cryptsetup persistence-encryption=luks  hostname=lab2go persistence
	

END

